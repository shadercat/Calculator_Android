<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TableRow android:layout_weight="4">

            <TextView
                android:id="@+id/textBox"
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:textAlignment="textEnd"
                android:textSize="10pt"
                android:layout_height="match_parent"/>
        </TableRow>
        <TableRow android:layout_weight="1">
            <Button
                android:id="@+id/clear"
                android:layout_weight="1"
                android:textSize="12pt"
                android:layout_height="match_parent"
                android:text="c" />
        </TableRow>
        <TableRow android:layout_weight="1">

            <Button
                android:id="@+id/num7"
                android:layout_weight="1"
                android:textSize="12pt"
                android:layout_height="match_parent"
                android:text="7" />

            <Button
                android:id="@+id/num8"
                android:layout_weight="1"
                android:textSize="12pt"
                android:layout_height="match_parent"
                android:text="8" />

            <Button
                android:id="@+id/num9"
                android:layout_weight="1"
                android:textSize="12pt"
                android:layout_height="match_parent"
                android:text="9" />

            <Button
                android:id="@+id/opMult"
                android:layout_weight="1"
                android:textSize="12pt"
                android:layout_height="match_parent"
                android:text="*" />
        </TableRow>
        <TableRow android:layout_weight="1">

            <Button
                android:id="@+id/num4"
                android:layout_weight="1"
                android:textSize="12pt"
                android:layout_height="match_parent"
                android:text="4" />

            <Button
                android:id="@+id/num5"
                android:layout_weight="1"
                android:textSize="12pt"
                android:layout_height="match_parent"
                android:text="5" />

            <Button
                android:id="@+id/num6"
                android:layout_weight="1"
                android:textSize="12pt"
                android:layout_height="match_parent"
                android:text="6" />

            <Button
                android:id="@+id/opMin"
                android:layout_weight="1"
                android:textSize="12pt"
                android:layout_height="match_parent"
                android:text="-" />
        </TableRow>
        <TableRow android:layout_weight="1">

            <Button
                android:id="@+id/num1"
                android:layout_weight="1"
                android:textSize="12pt"
                android:layout_height="match_parent"
                android:text="1" />

            <Button
                android:id="@+id/num2"
                android:layout_weight="1"
                android:textSize="12pt"
                android:layout_height="match_parent"
                android:text="2" />

            <Button
                android:id="@+id/num3"
                android:layout_weight="1"
                android:textSize="12pt"
                android:layout_height="match_parent"
                android:text="3" />

            <Button
                android:id="@+id/opPlus"
                android:layout_weight="1"
                android:textSize="12pt"
                android:layout_height="match_parent"
                android:text="+" />
        </TableRow>
        <TableRow android:layout_weight="1">

            <Button
                android:id="@+id/opDiv"
                android:layout_weight="1"
                android:textSize="12pt"
                android:layout_height="match_parent"
                android:text="/" />

            <Button
                android:id="@+id/num0"
                android:layout_weight="1"
                android:textSize="12pt"
                android:layout_height="match_parent"
                android:text="0" />

            <Button
                android:id="@+id/dot"
                android:layout_weight="1"
                android:textSize="12pt"
                android:layout_height="match_parent"
                android:text="." />

            <Button
                android:id="@+id/opCalc"
                android:layout_weight="1"
                android:textSize="12pt"
                android:layout_height="match_parent"
                android:text="=" />
        </TableRow>
    </TableLayout>

</androidx.constraintlayout.widget.ConstraintLayout>